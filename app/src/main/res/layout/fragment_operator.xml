<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e5e5e5"
    tools:context="nendi.wmtreborn.OperatorFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:scaleType="fitXY"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNamaL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="140dp"
                    android:fontFamily="@font/alte"
                    android:padding="8dp"
                    android:text="DATA OPERATOR"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Luserid"
                android:layout_below="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:fontFamily="@font/alte"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:text="User ID"
                   />

                <TextView
                    android:id="@+id/txtuserID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="20dp"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/alte"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Lemail"
                android:layout_below="@+id/Luserid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/alte"
                    android:text="Email" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:fontFamily="@font/alte"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LNoHP"
                android:layout_below="@+id/Lemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/alte"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="No. HP" />

                <TextView
                    android:id="@+id/txtNoHP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/alte"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:text=""/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>